<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="90.0" prefWidth="160.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.UploadOptionsController">
    <Button  alignment="BASELINE_LEFT" graphicTextGap="20.0" onAction="#handleNewFolder" prefHeight="30.0" prefWidth="170.0" style="-fx-background-color: white;" text="New folder">
      <font>
         <Font name="Arial" size="14.0" />
      </font>
      <graphic>
         <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@image/icon/new-folder32.png" />
            </image>
         </ImageView>
      </graphic>
   </Button>
    <Button alignment="BASELINE_LEFT" graphicTextGap="20.0" onAction="#handleFileUpload" prefHeight="30.0" prefWidth="170.0" style="-fx-background-color: white;" text="File upload">
      <font>
         <Font name="Arial" size="14.0" />
      </font>
      <graphic>
         <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@image/icon/upfile32.png" />
            </image>
         </ImageView>
      </graphic>
   </Button>
    <Button  alignment="BASELINE_LEFT" graphicTextGap="20.0" onAction="#handleFolderUpload" prefHeight="30.0" prefWidth="170.0" style="-fx-background-color: white;" text="Folder upload">
      <font>
         <Font name="Arial" size="14.0" />
      </font>
      <graphic>
         <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@image/icon/upfold32.png" />
            </image>
         </ImageView>
      </graphic>
   </Button>
</VBox>
